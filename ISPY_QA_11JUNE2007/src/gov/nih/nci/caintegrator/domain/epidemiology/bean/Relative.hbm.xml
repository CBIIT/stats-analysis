<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="gov.nih.nci.caintegrator.domain.epidemiology.bean.Relative" 
    	table="RELATIVE"
        lazy="true">

	    <id name="id" 
	    	column="RELATIVE_ID">
	        <generator class="native"/>
	    </id>
	    
        <property name="relationshipType" 
        	column="RELATIONSHIP_TYPE"/>
        	
        <property name="alive" 
        	column="ALIVE"/>
        	
        <property name="livingCompanion" 
        	column="LIVING_COMPANION"/>
    	<set name="tobaccoConsumptionCollection" lazy="true" inverse="true">
      		<key column="RELATIVE_ID" />
      		<one-to-many class="gov.nih.nci.caintegrator.domain.epidemiology.bean.TobaccoConsumption" />
    	</set>  
    	<set name="medicalConditionCollection" lazy="true" inverse="true">
      		<key column="RELATIVE_ID" />
      		<one-to-many class="gov.nih.nci.caintegrator.domain.epidemiology.bean.MedicalCondition" />
    	</set>  

	</class>
</hibernate-mapping>