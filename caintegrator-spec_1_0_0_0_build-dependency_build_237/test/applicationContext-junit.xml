<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

	<!-- Datasource that works in any application server
		You could easily use J2EE data source instead if this were
		running inside of a J2EE container.
	-->
	<bean id="dataSource"
		class="com.mchange.v2.c3p0.ComboPooledDataSource"
		destroy-method="close">
		<property name="driverClass">
			<value>oracle.jdbc.driver.OracleDriver</value>
		</property>
		<property name="jdbcUrl">
			<value>
				jdbc:oracle:thin:@cbiodb2-d.nci.nih.gov:1521:CPDEV
			</value>
		</property>
		<property name="user">
			<value>cgemsdev</value>
		</property>
		<property name="password">
			<value>dev1234</value>
		</property>
		<property name="properties">
			<props>
				<prop key="c3p0.acquire_increment">2</prop>
				<prop key="c3p0.idle_test_period">3000</prop>
				<prop key="c3p0.max_size">20</prop>
				<prop key="c3p0.max_statements">100</prop>
				<prop key="c3p0.min_size">5</prop>
				<prop key="c3p0.timeout">500000</prop>
				<prop key="user">cgemsdev</prop>
				<prop key="password">dev1234</prop>
			</props>
		</property>
	</bean>

	<!-- Hibernate SessionFactory -->
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="configLocation">
			<value>
				../cgems/src/cgems-domain-hibernate.cfg.xml
			</value>
		</property>
		<property name="dataSource" ref="dataSource"/>
	</bean>
	<bean id="txManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>	

</beans>